     #Le code start.py avant grand changement
          import os
from dotenv import load_dotenv
import discord
from discord.ext import commands
import random
from keep_alive import keep_alive

load_dotenv()
token = os.getenv('TOKEN_BOT_DISCORD')

# Cr√©e un objet bot
intents = discord.Intents.all()
bot = commands.Bot(command_prefix='!', intents=intents)

# correspondance entre le r√©sultat et les emojis de d√©s
DICE_EMOJIS = {
    1: "üé≤1Ô∏è‚É£",
    2: "üé≤2Ô∏è‚É£",
    3: "üé≤3Ô∏è‚É£",
    4: "üé≤4Ô∏è‚É£",
    5: "üé≤5Ô∏è‚É£",
    6: "üé≤6Ô∏è‚É£"
}

@bot.event
async def on_ready():
    bot.remove_command("roll")  # Supprime les doublons √©ventuels
    print(f"Connect√© en tant que {bot.user}")
@bot.command(name="roll")
async def roll(ctx):
    # Lancer un d√© (1 √† 6)
    dice_result = random.randint(1, 6)
    # R√©cup√©rer l'emoji correspondant
    dice_emoji = DICE_EMOJIS[dice_result]
    # Envoyer le r√©sultat sous forme d'emoji
    await ctx.send(f"üé≤ Tu as obtenu : {dice_emoji} !")


@bot.command(name="roll2")
async def roll2(ctx):
    """Lance 2 d√©s."""
    dice_results = [random.randint(1, 6) for _ in range(2)]  # Lancer 2 d√©s
    dice_emojis = [DICE_EMOJIS[result] for result in dice_results]  # Convertir en emojis
    results_message = " | ".join(dice_emojis)  # Joindre les r√©sultats avec des s√©parateurs
    await ctx.send(f"üé≤ R√©sultats des 2 d√©s : {results_message}")


@bot.command(name="roll3")
async def roll3(ctx):
    """Lance 3 d√©s."""
    dice_results = [random.randint(1, 6) for _ in range(3)]  # Lancer 3 d√©s
    dice_emojis = [DICE_EMOJIS[result] for result in dice_results]  # Convertir en emojis
    results_message = " | ".join(dice_emojis)  # Joindre les r√©sultats avec des s√©parateurs
    await ctx.send(f"üé≤ R√©sultats des 3 d√©s : {results_message}")


@bot.command(name="roll4")
async def roll4(ctx):
    """Lance 4 d√©s."""
    dice_results = [random.randint(1, 6) for _ in range(4)]  # Lancer 4 d√©s
    dice_emojis = [DICE_EMOJIS[result] for result in dice_results]  # Convertir en emojis
    results_message = " | ".join(dice_emojis)  # Joindre les r√©sultats avec des s√©parateurs
    await ctx.send(f"üé≤ R√©sultats des 4 d√©s : {results_message}")


@bot.command(name="roll5")
async def roll5(ctx):
    """Lance 5 d√©s."""
    dice_results = [random.randint(1, 6) for _ in range(5)]  # Lancer 5 d√©s
    dice_emojis = [DICE_EMOJIS[result] for result in dice_results]  # Convertir en emojis
    results_message = " | ".join(dice_emojis)  # Joindre les r√©sultats avec des s√©parateurs
    await ctx.send(f"üé≤ R√©sultats des 5 d√©s : {results_message}")
# Quand le bot est pr√™t
@bot.event
async def on_ready():
    print(f"Le bot est pr√™t et connect√© en tant que {bot.user}")

# D√©marrer le bot
keep_alive()
bot.run(token)




